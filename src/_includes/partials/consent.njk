<!-- Consent Popup -->
<div
  id="cookie-consent-banner"
  class="fixed bottom-0 w-full bg-gray-900 text-white p-4 shadow-md z-50 hidden"
>
  <div
    class="container flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0"
  >
    <p class="text-sm md:text-base text-left">
      We use cookies to improve your experience. Analytics tracking requires
      your consent.
      <a href="/privacy-policy" class="underline text-primary">Learn more</a>.
    </p>
    <div class="flex justify-center md:justify-end space-x-4">
      <button
        id="accept-cookies"
        data-consent="accept"
        class="bg-primary px-6 py-3 rounded text-sm md:text-base"
      >
        Accept
      </button>
      <button
        id="reject-cookies"
        data-consent="reject"
        class="bg-gray-700 px-6 py-3 rounded text-sm md:text-base ml-4"
      >
        Reject
      </button>
    </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const consent = localStorage.getItem("analytics_consent")
    if (!consent) {
      document
        .getElementById("cookie-consent-banner")
        .classList.remove("hidden")
    }
  })
</script>
